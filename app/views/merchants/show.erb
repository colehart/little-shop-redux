<header class="has-button-below">
  <h1><%= @merchant.name %></h1>
  <div class="edit-buttons-group">
    <a href="/merchants/<%= @merchant.id %>/edit"><button class="submit-button">Edit</button></a>
    <form class="delete-button" action="/merchants/<%= @merchant.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input class="cancel-button" type="submit" value="Delete"/>
    </form>
  </div>
</header>

<main class="all-items">
  <% @merchant.items.each do |item| %>
  <article class="merchant-<%= item.id %>">
    <img src="<%= item.image %>" alt="an image of <%= item.name %>" />
    <h3><a href="/items/<%= item.id %>"><%= item.name %></a></h3>
    <p>$<%= '%.2f' % item.unit_price %></p>
  </article>
  <% end %>
</main>
