<h1>Create New Item</h1>
<form class="" action="/items" method="post">
  <p>Merchant</p>
  <select class="merchant-dropdown" name="item[merchant_id]">
  <% @merchants.each do |merchant| %>
    <option value="<%= merchant.id %>"><%= merchant.name %></option>
    <% end %>
  </select>
  <p>Title</p>
  <input type="text" name="item[name]" value="">
  <p>Description</p>
  <textarea name="item[description]" value=""></textarea>
  <p>Price</p>
  <input type="integer" name="item[unit_price]" value="">
  <p>Image URL</p>
  <input type="text" name="item[image]" value="">
  <a href="/items"> <button>Cancel</button></a>
  <input type="submit" value="Create Item">
</form>
